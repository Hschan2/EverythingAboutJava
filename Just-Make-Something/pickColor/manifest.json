{
  "manifest_version": 3,
  "name": "RGB 값 찾기",
  "version": "1.0",
  "description": "버튼을 클릭하고 원하는 위치의 색상을 확인하세요.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./favicon-16.png",
      "48": "./favicon-32.png",
      "128": "./favicon-96.png"
    }
  }
}
